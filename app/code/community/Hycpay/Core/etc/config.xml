<config>
	<modules>
		<Hycpay_Core>
			<version>2.1.19</version>
		</Hycpay_Core>
	</modules>
	<frontend>
		<routers>
			<hycpay>
				<use>standard</use>
				<args>
					<module>Hycpay_Core</module>
					<frontName>hycpay</frontName>
				</args>
			</hycpay>
		</routers>
		<layout>
			<updates>
				<hycpay>
					<file>hycpay.xml</file>
				</hycpay>
			</updates>
		</layout>
		<translate>
			<modules>
				<hycpay>
					<files>
						<default>Hycpay_Core.csv</default>
					</files>
				</hycpay>
			</modules>
		</translate>
	</frontend>
	<admin>
		<routers>
			<adminhtml>
				<args>
					<modules>
						<hycpay before="Mage_Adminhtml">Hycpay_Core_Adminhtml</hycpay>
					</modules>
				</args>
			</adminhtml>
		</routers>
	</admin>
	<global>
		<blocks>
			<hycpay>
				<class>Hycpay_Core_Block</class>
			</hycpay>
		</blocks>
		<helpers>
			<hycpay>
				<class>Hycpay_Core_Helper</class>
			</hycpay>
		</helpers>
		<models>
			<hycpay>
				<class>Hycpay_Core_Model</class>
				<resourceModel>hycpay_mysql4</resourceModel>

			</hycpay>
			<hycpay_mysql4>
				<class>Hycpay_Core_Model_Mysql4</class>
				<entities>
					<invoice>
						<table>hycpay_invoices</table>
					</invoice>
					<ipn>
						<table>hycpay_ipns</table>
					</ipn>
				</entities>
			</hycpay_mysql4>
			<sales>
	    		<rewrite>
		          <order_payment>Hycpay_Core_Model_Order_Payment</order_payment>
		        </rewrite>
		    </sales>    
		</models>
		<events>
			<sales_order_place_before>
				<observers>
					<auto_invoice_order>
						<type>singleton</type>
						<class>Hycpay_Core_Model_Observer</class>
						<method>implementOrderStatus</method>
					</auto_invoice_order>
				</observers>
			</sales_order_place_before>
                        <checkout_onepage_controller_success_action>  
                                <observers>
                                        <hycpay_checkout_onepage_success_observer>
                                                <type>singleton</type>
                                                <class>hycpay_core_model_observer</class>
                                                <method>redirectToCartIfExpired</method>
                                        </hycpay_checkout_onepage_success_observer>
                                </observers>
                        </checkout_onepage_controller_success_action>
		</events>
		<resources>
			<hycpay_write>
				<connection>
					<use>core_write</use>
				</connection>
			</hycpay_write>
			<hycpay_read>
				<connection>
					<use>core_read</use>
				</connection>
			</hycpay_read>
			<hycpay_setup>
				<setup>
					<module>Hycpay_Core</module>
					<class>Hycpay_Core_Model_Resource_Mysql4_Setup</class>
				</setup>
				<connection>
					<use>core_setup</use>
				</connection>
			</hycpay_setup>
		</resources>
	</global>
	<default>
		<payment>
			<hycpay>
				<model>hycpay/method_bitcoin</model>
				<order_status>new</order_status>
				<payment_action>authorize</payment_action>
				<active>0</active>
				<title>Bitcoin and Bitcoin Cash</title>
                <api_key>test</api_key>
				<network>livenet</network>
				<debug>0</debug>
				<notification_url>hycpay/ipn</notification_url>
				<redirect_url>checkout/onepage/success</redirect_url>
                <failure_url>checkout/cart</failure_url>
				<speed>medium</speed>
				<fullscreen>0</fullscreen>
				<invoice_new>new</invoice_new>
				<invoice_paid>pending</invoice_paid>
				<invoice_confirmed>processing</invoice_confirmed>
				<invoice_complete>complete</invoice_complete>
				<invoice_expired>canceled</invoice_expired>
				<invoice_invalid>canceled</invoice_invalid>
			</hycpay>
		</payment>
	</default>
</config>
